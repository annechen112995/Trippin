<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.westwood.trippin.PackingFragment">

    <ListView
        android:id="@+id/lvItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etNewItem"
        android:cacheColorHint="@color/colorAccent"
        android:fontFamily="casual" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background = "@color/colorAccent"
        android:id="@+id/etNewItem"
        android:hint="Enter a new item"
        android:textColorHint = "#FFF"
        android:textColor = "#FFF"
        android:fontFamily="casual"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnAddItem"
        android:layout_toStartOf="@+id/btnAddItem"
        android:layout_alignBottom="@+id/btnAddItem" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:background="@color/colorAccent"
        android:textColor="#FFF"
        android:id="@+id/btnAddItem"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:fontFamily="san-serif-thin"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:inputType="textPersonName"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:text="P A C K I N G"
        android:textColor="#000"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>